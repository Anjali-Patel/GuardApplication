<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.ResidentOutFragment">

    <EditText

        android:id="@+id/input_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="5dp"
        android:background="@drawable/curve_search_bar"
        android:drawableLeft="@drawable/ic_search_24dp"
        android:focusedByDefault="false"
        android:gravity="left"
        android:hint="Search Out Resident...."
        android:drawablePadding="10dp"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textCapWords"
        android:paddingTop="8dp"/>
    <RelativeLayout
        android:layout_margin="6dp"
        android:padding="6dp"
        android:background="@drawable/rounded_corner"
        android:layout_below="@+id/input_search"
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user_profile" />
        <LinearLayout
            android:layout_toRightOf="@+id/img1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/serviceicon"
                android:text="Avani"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/serviceicon"
                android:text="12-01-2020"
                android:layout_marginLeft="5dp"
                android:textSize="15dp" />


        </LinearLayout>



        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="6dp"
        android:padding="6dp"
        android:background="@drawable/rounded_corner"
        android:layout_below="@+id/r1"
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user_profile" />
        <LinearLayout
            android:layout_toRightOf="@+id/img2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/serviceicon"
                android:text="Amisha"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/vendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/serviceicon"
                android:text="12-01-2020"
                android:layout_marginLeft="5dp"
                android:textSize="15dp" />


        </LinearLayout>



        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="6dp"
        android:padding="6dp"
        android:background="@drawable/rounded_corner"
        android:layout_below="@+id/r2"
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user_profile" />
        <LinearLayout
            android:layout_toRightOf="@+id/img3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/serviceicon"
                android:text="Nikita"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/serviceicon"
                android:text="12-01-2020"
                android:layout_marginLeft="5dp"
                android:textSize="15dp" />


        </LinearLayout>



        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>



</LinearLayout>