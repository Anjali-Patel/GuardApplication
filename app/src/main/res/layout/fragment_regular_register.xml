<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent"
    tools:context=".Fragment.RegularRegisterFragment">
    <RelativeLayout
        android:background="#d3d3d3"
        android:id="@+id/real"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/nested">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp">
                    <EditText
                        android:id="@+id/name"
                        android:padding="10dp"
                        android:hint="Enter Name"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit_background"                        android:layout_width="match_parent"
                        android:layout_height="45dp"  />
                    <LinearLayout
                        android:weightSum="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:id="@+id/mobile_number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:hint=" Mobile Number"
                            android:padding="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/edit_background"
                            android:layout_width="match_parent"
                            android:layout_height="45dp" />
                        <Button
                            android:id="@+id/check_visitor"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:text="Check Visitor"
                            android:textColor="@color/white"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_view"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"/>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/wing"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_background"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/word">

                        <Spinner


                            android:id="@+id/select_wing"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:textAlignment="textStart"
                            android:background="@drawable/edit_background"
                            tools:ignore="RtlHardcoded" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/dropdown" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/flat_number"
                        android:layout_width="match_parent"

                        android:layout_marginTop="15dp"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_background"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/word">

                        <Spinner


                            android:id="@+id/select_flat_number"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:textAlignment="textStart"
                            android:background="@drawable/edit_background"
                            tools:ignore="RtlHardcoded" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/dropdown" />


                    </RelativeLayout>
                    <EditText
                        android:id="@+id/in_time"
                        android:focusable="false"
                        android:inputType="time"
                        android:hint="Enter In Time"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit_background"                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                    <EditText
                        android:id="@+id/out_time"
                        android:visibility="gone"

                        android:hint="Enter Out Time"
                        android:padding="10dp"
                        android:inputType="time"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit_background"                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        />
                    <EditText
                        android:id="@+id/purpose"
                        android:hint="Enter Purpose"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit_background"                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        />
                    <RelativeLayout
                        android:id="@+id/select_society"
                        android:layout_width="match_parent"

                        android:layout_marginTop="15dp"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_background"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/word">

                        <Spinner

                            android:id="@+id/society_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:textAlignment="textStart"
                            android:background="@drawable/edit_background"
                            tools:ignore="RtlHardcoded" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/dropdown" />


                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="80dp"
                        android:background="@drawable/edit_background"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <TextView

                            android:layout_gravity="center_vertical"                        android:layout_marginLeft="10dp"
                            android:textAllCaps="false"
                            android:text="Upload Profile Picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/img_camera"
                            android:layout_gravity="center"
                            android:src="@drawable/user_profile"
                            android:layout_width="70dp"
                            android:layout_height="70dp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        <Button
            android:id="@+id/save"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:text="Save"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            android:alpha="0.4"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:layout_gravity="center"
                />

        </FrameLayout>
    </RelativeLayout>


</LinearLayout>